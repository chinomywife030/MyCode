{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@bangbuy/core": [
        "../../packages/core/src/index.ts"
      ],
      "@bangbuy/core/*": [
        "../../packages/core/src/*"
      ],
      "@core/*": [
        "../../packages/core/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/core/src/**/*.ts"
  ]
}
